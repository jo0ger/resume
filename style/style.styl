@media all {
	.page-break	{ display: none; }
	.page-start	{ display: none; }
}

@media screen {
	.download-button {
		font-size: 14pt;
		border-radius: 3px;
		letter-spacing: 0.03rem;
		text-align: center;
		display: block;
		box-sizing: border-box;
		height: 70px;
		padding: 1.35em 0 0;
		margin: 30px auto 0;
	}
	.download-button.played {
		border-top-left-radius: 3px;
		border-top-right-radius: 3px;
		border-bottom-left-radius: 3px;
		border-bottom-right-radius: 3px;
	}
	.download-button:hover {
	}

	.skills {
		.skill-item {
			position relative
			animation-delay 500ms
			animation-duration 1500ms

			&.js {
				width ($js)%
				animation-name bar-js
			}

			&.css {
				width ($css)%
				animation-name bar-css

				.name {
					background-color: alpha(#2B8CD2, .1);
					border-color: alpha(#2B8CD2, .8);  
					color: #2B8CD2;
				}
			}

			&.vue {
				width ($vue)%
				animation-name bar-vue

				.name {
					background-color: alpha(#42b983, .1);
					border-color: alpha(#42b983, .8);  
					color: #42b983;
				}
			}

			&.node {
				width ($node)%
				animation-name bar-node

				.name {
					background-color: alpha(#2f6b1c, .1);
					border-color: alpha(#2f6b1c, .8);  
					color: #2f6b1c;
				}
			}

			&.react {
				width ($react)%
				animation-name bar-react

				.name {
					background-color: alpha(#61dafb, .1);
					border-color: alpha(#61dafb, .8);  
					color: #61dafb;
				}
			}

			.name {
				height: 1cm;
				line-height: @height;
				padding-left: 8pt;
				border-left: 3px solid;
				overflow: hidden;
				background-color: #fff6dd;
				border-color: #fdbc40;
				color: #ff742a;  
			}

			&:hover {
				.detail {
					display: block
				}
			}
		}
		.detail {
			position: absolute;
			display: none;
			right: 0;
			top: 0;
			z-index: 9999;
			max-width: 10cm;
			padding: 8pt;
			background: rgba(255, 255, 255, .8);
			box-shadow: 0 0 3px rgba(0, 0, 0, .2);
			border-radius: 4px;

			p {
				margin-bottom 0
			}
		}
	}
}

