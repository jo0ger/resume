	-webkit-font-smoothing: subpixel-antialiased;
}

body {
	font-size: 10pt;
	margin: 0 auto;
}

strong {
	font-weight: 500;
}

.avatar {
	float: right;
	width: 3.38cm;
	height: 3.38cm;
	margin: 0 0 0 0;
	transform: translateY(-0.5pt);
	box-sizing: border-box;
}

h1 {
	font-size: 28pt;
	margin: 0 0 6pt;
}

a {
	color: inherit;
	text-decoration: none;
}

.fade {
  @media (min-width: 768px) {
    animation: fade-in 0.8s
  }
}

.info a {
	display: inline-block;
}

.info {
	line-height: 1.8em;
	display: block;
}

.info em {
	font-style: normal;
	display: inline-block;
}

.main {
	padding-top: 1cm;
}

.section {
}

.section-heading {
	font-size: 18pt;
	letter-spacing: 0.10rem;
	padding-top: 8pt;
	margin: 0 0 13pt;
}

.subsection-tagline {
	font-size: 10pt;
	letter-spacing: 0.12rem;
	text-transform: uppercase;
	display: block;
	margin: 13pt 0 13pt -10pt;
}

h3 {
	font-size: 12pt;
	margin: 13pt 0 5pt;

  .school
  .company {
    box-sizing: border-box;
    display: inline-block;
    min-width: 6cm
  }

  .major
  .job {
    box-sizing: border-box;
    display: inline-block;
    min-width: 5cm;
    font-size 10pt
    color #B4B4B4
  }
}

p {
	line-height: 1.4em;
	margin: 0 0 4pt;
}

p a {
}

.ref {
	font-size: 9pt;
	display: block;
	margin: 6pt 0 6pt;
}

