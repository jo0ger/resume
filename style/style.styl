@keyframes fade-in {
  0%{
    display none
    opacity 0
  }  
  1% {
    display block
    opacity 0
  }
  100% {
    display block
    opacity 1
  }
}

@keyframes bar-js {
  0% {
    width 0  
  }
  100% {
    width $js
  }
}
