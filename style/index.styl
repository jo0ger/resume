@import '_fonts'
@import '_var'
@import '_mixin'

* {
  box-sizing border-box
  -webkit-tap-highlight-color alpha($black, 0) //  remove tap highlight color for mobile safari
  &::before
  &::after {
    box-sizing border-box
  }
}

html {
  -webkit-text-size-adjust 100%
}

body {
  margin 0 auto
  padding 0
  font 10pt $font-family-base
  line-height 1.53
  background $white
  color $text-color
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing antialiased
  text-rendering optimizeLegibility
  user-select none

  +respond-above($screen-sm-min) {
    max-width $screen-md
  }
}

a {
  color inherit
  background transparent
  text-decoration none
  outline none
  cursor pointer
}

.header {
  position relative
  width 100%
  background $head-bg-color
  letter-spacing 2px

  .wrapper {
    padding 2.5em 4em
    color $white
    text-align center

    .name {
      margin 0
      font-size 3em
      font-family $head-family
    }

    .desc {
      margin 0
      font-family $desc-family
      color alpha($white, .8)
      font-size 1.2em
    }
  }
}

.main {
  position relative
  width 100%
  height 100%
  padding 2.5em 0
  background $main-bg-color
  text-align justify
  text-justify inter-ideograph

  .wrapper {
    flexLayout(,, flex-start)
    position relative
    &::after {
      content ''
      position absolute
      top 0
      left 50%
      transform translateX(-50%) 
      width 1px
      height 100%
      background alpha($base-color, .1)
    }
  }


  .side {
    flex 1 0 50%
    height 100%
    padding 0 4em

    .block {
      .title {
        position relative
        margin 0
        font-size 18px
        &::after {
          content ''
          position absolute
          bottom -0.5em
          left 0
          width 2em
          height 2px
          background $base-color
        }
      }

      .content {
        margin 2em 0 3em
        h4 {
          margin 0
          font-size 16px
          font-weight 500
        }
        p {
          margin .5em 0
        }

        .item {
          margin-bottom 3em
        }
      }

      &.experience {
        .item {
          margin-bottom 3em
          header {
            flexLayout(, space-between)
            margin-bottom .5em
            font-size 12px
          }

          main {
            .job {
              color alpha($base-color, .6)
            }
          }
        }
      }

      &.contact {
        p {
          strong {
            margin-right 10px
          }
        }
      }

      &.skill {
        .item {
          flexLayout(, flex-start)
          margin .5em 0
          .name {
            flex 0 0 150px
          }

          .value {
            flex 1 0
            position relative
            display block
            height 4px
            background alpha($base-color, .2)

            &::after {
              content ''
              position absolute
              left 0
              height 100%
              background $base-color
            }
          }

          &.js {
            .value {
              &::after {
                width '%s%' % $js
              }
            }
          }
          &.vue {
            .value {
              &::after {
                width '%s%' % $vue
              }
            }
          }
          &.node {
            .value {
              &::after {
                width '%s%' % $node
              }
            }
          }
          &.html {
            .value {
              &::after {
                width '%s%' % $html
              }
            }
          }
          &.react {
            .value {
              &::after {
                width '%s%' % $react
              }
            }
          }
        }
      }

      &.education {
        .item {
          .info {
            flexLayout(, space-between)
            margin-top .5em
          }
        }
      }

      &.certificate {
        .item {
          flexLayout(, space-between)
          margin .5em 0
        }
      }
    }
  }
}
